{
    "name": "simple-bookmarks-firefox",
    "private": true,
    "version": "0.1.1",
    "type": "module",
    "engines": {
        "node": "^20"
    },
    "scripts": {
        "build": "npm run build:firefox",
        "manifest:firefox": "rm -rf ./public/manifest.json && cp ./manifest.firefox.json ./public/manifest.json",
        "build:firefox": "tsc -b && npm run manifest:firefox && vite build && rm -rf zip/firefox && node build.js",
        "lint": "eslint .",
        "format": "prettier -c .",
        "format:fix": "prettier -w ."
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "usehooks-ts": "^3.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@types/firefox-webext-browser": "^120.0.4",
        "@types/node": "^22.5.5",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/webextension-polyfill": "^0.12.1",
        "@vitejs/plugin-react": "^4.3.1",
        "eslint": "^9.9.0",
        "eslint-plugin-react-hooks": "^5.1.0-rc.0",
        "eslint-plugin-react-refresh": "^0.4.9",
        "globals": "^15.9.0",
        "prettier": "^3.3.3",
        "typescript": "~5.5.3",
        "typescript-eslint": "^8.0.1",
        "vite": "^5.4.1",
        "vite-plugin-web-extension": "^4.1.6",
        "web-ext": "^8.3.0",
        "webextension-polyfill": "^0.12.0"
    }
}
